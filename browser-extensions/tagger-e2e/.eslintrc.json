{
  "extends": ["plugin:playwright/recommended", "../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["src/**/*.{ts,js,tsx,jsx}"],
      "rules": {
        "playwright/no-skipped-test": ["off", true], // Would use but the allowConditional isn't working for me
        "no-empty-pattern": [
          "warn",
          { "allowObjectPatternsAsParameters": true }
        ]
      }
    }
  ]
}
